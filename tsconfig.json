{
    "compilerOptions": {
        "jsx": "react",
        "module": "esnext",
        "noImplicitAny": false,
        "outDir": "./build/",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "es5",

        "baseUrl": "src",
        "paths": {
            "react": ["node_modules/preact/compat"],
            "react-dom": ["node_modules/preact/compat"],
            "utils": ["/utils/*"],
            "assets": ["/assets/*"],
            "components": ["/components/*"],
            "pages": ["/pages/*"],
            "store": ["/store/*"],
            "entry": ["/entry/*"],
            "hooks": ["/hooks/*"],
            "config": ["/config/*"]
        }
    },
    "include": ["src/**/*", "@types/**/*"],
    "exclude": ["node_modules"]
}
